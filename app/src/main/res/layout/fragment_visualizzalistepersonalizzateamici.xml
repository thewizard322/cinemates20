<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitoloVisualizzaListaPersAmico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:text="TITOLO LISTA"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerTitoloVisualizzaListePersonalizzateAmico"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/spinner_custom"
                android:minWidth="360dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>


        <Button
            android:id="@+id/btValutaListaPersonalizzataAmico"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/scrivi"
            app:backgroundTint="@null"
            app:iconTint="@null"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvDescrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="DESCRIZIONE"
        android:textColor="#000000"
        android:textSize="17dp"
        android:background="#E8E8E8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescrizioneListaPersAmico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:background="#E8E8E8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <ListView
        android:id="@+id/lvVisualizzaListePersonalizzateAmico"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvEmptyListePersonalizzateAmico"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:text="NESSUN FILM NELLA LISTA PERSONALIZZATA" />

</LinearLayout>