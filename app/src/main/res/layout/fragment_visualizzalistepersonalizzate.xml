<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/bAggiungiVisualizzaListePersonalizzate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:background="@drawable/buttoncircle_default"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/tvTitoloVisualizzaListaPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:text="TITOLO"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerTitoloVisualizzaListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/tvDescrizioneVisualizzaListaPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:text="DESCRIZIONE"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescrizioneVisualizzaListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"/>

    <ListView
        android:id="@+id/lvVisualizzaListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvEmptyListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:text="NESSUN FILM NELLA LISTA PERSONALIZZATA" />

</LinearLayout>