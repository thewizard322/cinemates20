<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitoloVisualizzaListaPers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:text="TITOLO LISTA"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerTitoloVisualizzaListePersonalizzate"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/spinner_custom"
                android:spinnerMode="dropdown"
                android:minWidth="360dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btRaccomandaListaPersonalizzata"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/buttontransparent_custom"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:backgroundTint="@null"
            app:icon="@drawable/share"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="#000000"/>

        <ImageButton
            android:id="@+id/bAggiungiVisualizzaListePersonalizzate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="22dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttoncircle_default"
            app:srcCompat="@android:drawable/ic_input_add" />
</LinearLayout>


    <TextView
        android:id="@+id/tvDescrizioneVisualizzaListaPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="#FFFFFF"
        android:text="DESCRIZIONE"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescrizioneVisualizzaListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:background="@android:color/holo_orange_light"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="3dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black" />

    <ListView
        android:id="@+id/lvVisualizzaListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvEmptyListePersonalizzate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:text="NESSUN FILM NELLA LISTA PERSONALIZZATA" />

</LinearLayout>